@using SchoolTemplate.Database;
@model List<Evenement>
@{
  ViewData["Title"] = "Evenementen";
}

<div class="text-center container">
    <h1>Evenementen</h1>

    <div class="row">
        @foreach (Evenement evenement in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

                    <div class="card-body">
                        <h5 class="card-title">@evenement.Naam</h5>
                        <p class="card-text">@evenement.Beschrijving</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a type="button" class="btn btn-block btn-outline-secondary" href="/evenementen/@evenement.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
